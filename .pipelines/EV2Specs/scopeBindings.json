{
    "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/scopeBindings.json",
    "contentVersion": "0.0.0.1",
    "scopeBindings": [
        {
            "scopeTagName": "Global",
            "bindings": [
                {
                    "find": "__SUBSCRIPTION_ID__",
                    "replaceWith": "$azureSubscriptionId()"
                },
                {
                    "find": "__BUILD_VERSION__",
                    "replaceWith": "$buildVersion()"
                }
            ]
        },
        {
            "scopeTagName": "TestEnv",
            "bindings": [
                {
                    "find": "__ACRPUSH_MANAGED_IDENTITY_ARM_ID__",
                    "replaceWith": "/subscriptions/9b8218f9-902a-4d20-a65c-e98acec5362f/resourceGroups/acn-ev2-resources/providers/Microsoft.ManagedIdentity/userAssignedIdentities/acndev-image-push"
                },
                {
                    "find": "__IMAGE_TAR_DIRECTORY__",
                    "replaceWith": "drop_build_restore"
                },
                {
                    "find": "__ACR_NAME__",
                    "replaceWith": "acnpublic.azurecr.io"
                },
                {
                    "find": "__IMAGE_NAME_SPACE__",
                    "replaceWith": "public/retina"
                }
            ]
        },
        {
            "scopeTagName": "ProdEnv",
            "bindings": [
                {
                    "find": "__ACRPUSH_MANAGED_IDENTITY_ARM_ID__",
                    "replaceWith": "/subscriptions/0895de50-30a3-4b75-aada-5b23ebd4e8bc/resourceGroups/ProductionACR/providers/Microsoft.ManagedIdentity/userAssignedIdentities/acnprod-image-push"
                },
                {
                    "find": "__ACR_NAME__",
                    "replaceWith": "acnprod.azurecr.io"
                },
                {
                    "find": "__IMAGE_TAR_DIRECTORY__",
                    "replaceWith": "drop_build_restore"
                },
                {
                    "find": "__IMAGE_NAME_SPACE__",
                    "replaceWith": "public/containernetworking"
                }
            ]
        }
    ]
}
