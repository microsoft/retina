{
  "name": "retina",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  // run args are used for cilium
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=SYS_MODULE"],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/go:1": {
      // This go version should match retina go version
      "version": "1.22.3"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers-contrib/features/kind:1": {}
  },
  "postCreateCommand": "bash .devcontainer/installMoreTools.sh && bash .devcontainer/setupKindWithLocalRegistry.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "golang.go",
        "mutantdino.resourcemonitor",
        "ms-vscode.makefile-tools",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  }
}
